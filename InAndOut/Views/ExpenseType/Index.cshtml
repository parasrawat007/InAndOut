@model IEnumerable<ExpenseType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="ExpenseType" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>
    <br />
    @if (Model.Count() != 0)
    {
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th scope="col">Expense</th>                    
                    <th scope="col">Changes</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%">@obj.Name</td>
                        <td width="30%">

                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Update" asp-controller="ExpenseType" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-action="Delete" asp-controller="ExpenseType"  asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>






