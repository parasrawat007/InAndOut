@model ExpenseVM
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        @*
            If Model only than validation message will only show near the inputs
            If All then validation message will show on the top and also near the input
            Use Only If you want validation Summary on the top
        *@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Expense.ExpenseName"> </label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expense.Amount"> </label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expense.ExpenseType"> </label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Expense.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Expense.Amount" class="form-control" />
                        <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <Select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control" >
                            <option selected disabled>-- Selected --</option>     
                        </Select>
                        <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@*For Adding Client Side Validation*@
@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}
